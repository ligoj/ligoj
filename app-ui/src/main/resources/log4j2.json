{
	"configuration": {
		"status": "warn",
		"name": "Main",
		"monitorInterval": 60,
		"properties": {
			"property": {
				"name": "filename",
				"value": "${sys:ligoj.home:-target}/${sys:ligoj.log.file.name:-ui-rolling.log}"
			}
		},
		"ThresholdFilter": {
			"level": "debug"
		},
		"appenders": {
			"appender": [
				{
					"type": "Console",
					"name": "STDOUT",
					"PatternLayout": {
						"pattern": "%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %msg%n"
					}
				}, {
					"type": "Console",
					"name": "STDOUT_VERBOSE",
					"PatternLayout": {
						"pattern": "%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"
					}
				},
				{
					"type": "Routing",
					"name": "MaybeRolling",
					"Routes": {
						"pattern": "${sys:ligoj.log.file.enabled:-true}",
						"Route": [
							{
								"key": "true",
								"RollingFile": {
									"name": "RollingFileActive",
									"fileName": "${filename}",
									"filePattern": "${filename}.%i.gz",
									"PatternLayout": {
										"pattern": "%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"
									},
									"SizeBasedTriggeringPolicy": {
										"size": "${sys:ligoj.log.file.size:-10 MB}"
									}
								}
							},
							{
								"key": "false",
								"Null": { "name": "NoFile" }
							}
						]
					}
				}
			]
		},
		"loggers": {
			"logger": [
				{
					"name": "org.springframework.security",
					"level": "warn",
					"additivity": "false",
					"AppenderRef": {
						"ref": "STDOUT"
					}
				}, {
					"name": "org.eclipse.jetty.server.HttpChannel",
					"level": "${sys:log4j2.jetty.http.level:-warn}",
					"additivity": "false",
					"AppenderRef": {
						"ref": "STDOUT_VERBOSE"
					}
				}, {
					"name": "org.eclipse.jetty.server.Server",
					"level": "${sys:log4j2.jetty.server.level:-debug}",
					"additivity": "false",
					"AppenderRef": {
						"ref": "STDOUT_VERBOSE"
					}
				}, {
					"name": "org.eclipse.jetty.webapp.StandardDescriptorProcessor",
					"level": "warn",
					"additivity": "false",
					"AppenderRef": {
						"ref": "STDOUT"
					}
				}
			],
			"root": {
				"level": "${sys:log.level:-info}",
                "AppenderRef": [
                  { "ref": "STDOUT" },
                  { "ref": "MaybeRolling" }
                ]
			}
		}
	}
}